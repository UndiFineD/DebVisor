{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run fix_markdown_lint",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": [
        "fix_markdown_lint.py",
        "improvements.md"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Activate venv (PowerShell)",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\Activate.ps1",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
