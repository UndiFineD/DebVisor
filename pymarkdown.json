{
  "plugins": {
    "md003": { "style": "consistent" },
    "md004": { "style": "dash" },
    "md007": { "indent": 2 },
    "md009": { "strict": true },
    "md022": { "lines_above": 1, "lines_below": 1 },
    "md025": { "enabled": true },
    "md032": { "enabled": true }
  },
  "alternate_extensions": ["markdown"],
  "py_log_level": "warning",
  "scan": {
    "add_file": ["**/*.md"],
    "remove_file": [".venv/**", "node_modules/**", ".pytest_cache/**"]
  }
}